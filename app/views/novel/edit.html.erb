<div class="edit-novel"></div>
<form class="edit-book" action="/library/<%= @novelist_id %>/<%= @novel.id %>/update" method="post">
	<h2>Edit Novel</h2>
	<div class="novel_title_input_container">
		<label for="title">Title:</label>
		<input type="text" name="novel[title]" value="<%= @novel.title %>"/>
	</div>
	<div class="novel_year_published_input_container">
		<label for="year_published">Year Published:</label>
		<input type="text" name="novel[year_published]" value="<%= @novel.year_published %>"/>
	</div>
	<div class="novel_genre_container">
		<label for="genre">Genre:</label>
		<input type="text" name="novel[genre]" value="<%= @novel.genre %>"/>
	</div>
	<button type="submit">Submit</button>
	<br>
	<a href="/library/<%= @novelist_id %>/<%= @novel.id %>/destroy">Delete</a> | <a href="/">Cancel</a>
</form>
